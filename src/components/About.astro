---
import { education } from '../data/education';
---

<section id="about" class="section about">
  <div class="container">
    <div class="section-title">
      <h2>About Me</h2>
    </div>
    <div class="about-content">
      <div class="about-text">
        <p>
          I'm a Software Engineer with a passion for building robust, scalable applications.
          Currently working at L3Harris Technologies where I design and implement mission-critical
          embedded software and lead development initiatives for innovative products.
        </p>
        <p>
          My experience spans full-stack web development, embedded systems, and AI integration.
          I thrive in environments where I can solve complex problems and deliver impactful solutions.
        </p>
      </div>
      <div class="education">
        <h3>Education</h3>
        {education.map((edu) => (
          <div class="education-item">
            <h4>{edu.degree}</h4>
            <p class="institution">{edu.institution}</p>
            <p class="date">{edu.date}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .about-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
  }

  .about-text p {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .education h3 {
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
  }

  .education-item {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1rem;
  }

  .education-item h4 {
    font-size: 1.125rem;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }

  .institution {
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .date {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
